@{
    ViewData["Title"] = "Players List";
}
@model List<Player>
<div class="container">
    <div class="col-md-15">
        <h2 class="mb-4">Players</h2>
        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th></th>
                    <th>Player Name</th>
                    <th>Wons</th>
                    <th>Highest Score</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @for(int i = 0;i < Model.Count;i++)
                {
                    <tr>
                        <td>@(i+1)</td>
                        <td style="width: 50%;">@Model[i].PlayerName</td>
                        <td>@Model[i].Wons</td>
                        <td>@Model[i].HighestScore</td>
                        <td><form asp-controller="Players" asp-action="DeletePlayer" method="post">
                                <input type="hidden" name="id" value="@Model[i].Id" />
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

